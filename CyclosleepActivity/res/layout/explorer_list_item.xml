<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:background="@drawable/def_border_u_cornered">

    <ImageView
        android:id="@+id/imgExplorerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_file_unknown" android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/lblExplorerListItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgExplorerList"
        android:text="item1"
        android:textColor="#AACCAA"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblExplorerListItem2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblExplorerListItem1"
        android:layout_toRightOf="@+id/lblExplorerListItem1"
        android:text="item2"
        android:textSize="14sp" android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/lblExplorerListItem3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblExplorerListItem1"
        android:layout_toRightOf="@+id/imgExplorerList"
        android:text="item3"
        android:textSize="14sp" android:layout_marginLeft="25dp"/>

    <TextView
        android:id="@+id/lblExplorerListItem4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lblExplorerListItem3"
        android:layout_alignBottom="@+id/lblExplorerListItem3"
        android:layout_toRightOf="@+id/lblExplorerListItem3"
        android:text="item4"
        android:textSize="14sp" android:layout_marginLeft="10dp"/>

</RelativeLayout>