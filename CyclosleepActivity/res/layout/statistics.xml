<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/lblStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" android:layout_marginBottom="10dp"/>

    <de.lme.plotview.PlotView
        android:id="@+id/viewPlot"
        android:layout_width="match_parent"
        android:background="@drawable/def_border_u_cornered" android:layout_height="match_parent" android:layout_weight="1"/>

    <com.gradlspace.widgets.HypnogramView
        android:id="@+id/viewHypno1"
        android:background="@drawable/def_border_u_cornered"
        android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>

    <com.gradlspace.widgets.HypnogramView
        android:id="@+id/viewHypno2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/def_border_u_cornered" />

    <com.gradlspace.widgets.HypnogramView
        android:id="@+id/viewHypno3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/def_border_u_cornered" />

</LinearLayout>