<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:paddingLeft="8dp"
         android:paddingRight="8dp">

    <ListView android:id="@android:id/list"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:drawSelectorOnTop="true" android:fastScrollEnabled="true" android:isScrollContainer="true" android:listSelector="@drawable/def_border_u_cornered_selected" android:choiceMode="singleChoice" android:longClickable="true"/>

     <TextView android:id="@android:id/empty"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/def_border_ul"
               android:text="No files found" android:gravity="center"/>

</LinearLayout>